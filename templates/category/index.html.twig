{% extends 'base.html.twig' %}

{% block title %}categories{% endblock %}

{% block body %}

<div class="container"><br><br>
    <h1>Categories</h1><br><br>

    
    {% include 'layouts/_flash_message.html.twig' %}

<table class="table"> 
    <tr>
        <th>Id</th>
        <th>Nom de catégories</th>
        <th>Action</th>
    </tr>
    {% for category in categories %}
    <tr>
        <td>{{ category.id }}</td>
        <td>{{ category.name }}</td>
        <td>
            <a class="btn btn-outline-primary" href="{{ path('app_category_update',{id: category.id}) }}">Modifier</a> |
            <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');" class="btn btn-danger" href="{{ path('app_category_delete',{id: category.id}) }}"> Supprimer</a>
        </td>
    </tr>
        {% else %}
        <p>Aucune catégorie à afficher pour l'instant </p>
    {% endfor %}
    </table>
    <br> 
    <a class="btn btn-primary" href="{{ path('app_category_new') }}">Ajouter une catégorie</a>
</div>
{% endblock %}
