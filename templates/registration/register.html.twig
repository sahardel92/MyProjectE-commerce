{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container security-form">
        <div class="login-form">
            <h1>Inscription</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_widget(registrationForm.email,{'attr':{'class':'form form-control','placeholder':"Email"}}) }}
            <br>

            {{ form_widget(registrationForm.firstName,{'attr':{'class':'form form-control','placeholder':"Nom"}}) }}
            <br>
            {{ form_widget(registrationForm.lastName,{'attr':{'class':'form form-control','placeholder':"Pr√©nom"}}) }}
            <br>
            {{ form_widget(registrationForm.plainPassword, {
                'attr': {'class': 'form form-control', 'placeholder': 'Mot de passe'}
            }) }}

            {{ form_row(registrationForm.agreeTerms, {
                'attr': {'class': 'form form-check-input'}
            }) }}

            <button type="submit" class="btn btn-block btn-primary">Register</button>
        {{ form_end(registrationForm) }}
        </div>
    </div> 
{% endblock %}
