{% extends 'base.html.twig' %}

{% block title %}Checkout - LilyShop{% endblock %}

{% block body %}
<div class="container my-5">
  <div class="row">
    <!-- üìù Formulaire livraison -->
    <div class="col-md-8">
      <div class="card shadow-sm p-4">
        <h2 class="mb-4">üì¶ Informations de livraison</h2>

        {% for message in app.flashes('error') %}
          <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {% if showPayment %}
          <div class="alert alert-success mb-4">
            ‚úÖ Adresse valid√©e ! Vous pouvez maintenant proc√©der au paiement.
          </div>
        {% endif %}

        {{ form_start(form, {
            action: path('app_order'),
            method: 'POST',
            attr: { id: 'order-form', novalidate: 'novalidate' }
        }) }}
          <div class="row g-3">
            {{ form_widget(form) }}
          </div>

          <div class="mt-4 text-end">
            <button type="submit" class="btn btn-primary btn-lg" id="continue-btn">
              {{ showPayment ? 'Modifier l‚Äôadresse' : '‚úÖ Continuer' }}
            </button>
          </div>
        {{ form_end(form) }}

        <!-- üõí D√©tail des articles -->
        <h4 class="mt-5">üõí Vos articles</h4>
        <ul class="list-group mb-3">
          {% for item in items %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
              {{ item.product.name }} (x{{ item.quantity }})
              <span>{{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} ‚Ç¨</span>
            </li>
          {% else %}
            <li class="list-group-item text-muted">Votre panier est vide.</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <!-- üìä R√©sum√© commande -->
    <div class="col-md-4">
      <div class="card shadow-sm p-4">
        <h4 class="mb-3">üßæ R√©sum√©</h4>

        <div class="d-flex justify-content-between mb-2">
          <span>Produits</span>
          <strong id="product-total">{{ total|number_format(2, ',', ' ') }} ‚Ç¨</strong>
        </div>

        <div class="d-flex justify-content-between mb-2">
          <span>Frais de livraison</span>
          <span id="shipping-cost" class="text-muted">--</span>
        </div>

        <hr>

        <div class="d-flex justify-content-between fs-5">
          <span>Total √† payer</span>
          <strong id="grand-total" class="text-success">{{ total|number_format(2, ',', ' ') }} ‚Ç¨</strong>
        </div>

        <hr>

        <!-- üí≥ Bouton PayPal toujours visible mais d√©sactiv√© -->
        <div class="text-center">
          <div id="paypal-button-container" class="opacity-50"></div>
          <small id="paypal-msg" class="text-muted">‚ö†Ô∏è Validez votre adresse pour activer le paiement PayPal.</small>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <!-- ‚ö° Mise √† jour du co√ªt de livraison -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const citySelector = document.querySelector("#order_city");
      const productTotal = parseFloat("{{ total }}");
      const shippingCostEl = document.getElementById("shipping-cost");
      const grandTotalEl = document.getElementById("grand-total");

      async function updateShipping(cityId) {
        try {
          const response = await fetch(`/city/${cityId}/shipping/cost`);
          const data = await response.json();
          if (data.status === 200) {
            const shipping = parseFloat(data.content);
            shippingCostEl.textContent = `${shipping.toFixed(2)} ‚Ç¨`;
            grandTotalEl.textContent = `${(productTotal + shipping).toFixed(2)} ‚Ç¨`;
          }
        } catch {
          shippingCostEl.textContent = "Erreur...";
        }
      }

      if (citySelector) {
        updateShipping(citySelector.value);
        citySelector.addEventListener("change", (e) => updateShipping(e.target.value));
      }
    });
  </script>

  <!-- üí≥ Script PayPal -->
  <script src="https://www.paypal.com/sdk/js?client-id=ARIlNMxxayV2gxvOkVOQTubAlffwfGmkqcZU-C3-0_xJCpUa5uAMDKGYuSAj5wHYeOUAj4bUV4Lory0v&currency=EUR"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const paypalContainer = document.getElementById('paypal-button-container');
      const paypalMsg = document.getElementById('paypal-msg');
      const isPaymentActive = "{{ showPayment ? '1' : '0' }}" === '1';

      // Rendu du bouton PayPal
      paypal.Buttons({
        createOrder: (data, actions) => {
          let totalText = document.getElementById("grand-total").textContent.replace("‚Ç¨", "").trim();
          totalText = totalText.replace(/\s/g, '');
          return actions.order.create({
            purchase_units: [{ amount: { value: totalText } }]
          });
        },
        onApprove: (data, actions) => {
          return actions.order.capture().then(details => {
            alert("‚úÖ Paiement r√©ussi, merci " + (details.payer.name?.given_name || 'client') + " !");
            window.location.href = "/order/confirm";
          });
        },
        onError: err => {
          console.error('PayPal error', err);
          alert("Une erreur est survenue lors du paiement PayPal. R√©essaye plus tard.");
        }
      }).render('#paypal-button-container');

      // D√©sactive le bouton si showPayment = false
      if (!isPaymentActive) {
        paypalContainer.style.pointerEvents = 'none';
        paypalContainer.style.opacity = '0.4';
        paypalMsg.textContent = "‚ö†Ô∏è Validez votre adresse pour activer le paiement PayPal.";
      } else {
        paypalContainer.style.pointerEvents = 'auto';
        paypalContainer.style.opacity = '1';
        paypalMsg.textContent = "‚úÖ Vous pouvez maintenant payer avec PayPal.";
      }
    });
  </script>
{% endblock %}
