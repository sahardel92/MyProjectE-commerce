{{ form_start(form) }}

    <div class="mb-3">
        {{ form_row(form.name, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3">
        {{ form_row(form.description, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3">
        {{ form_row(form.price, { 'attr': {'class': 'form-control'} }) }}
    </div>

    {% if (button_label|default('Save')) != 'Update' %}
        <div class="mb-3">
            {{ form_row(form.stock, { 'attr': {'class': 'form-control'} }) }}
        </div>
    {% endif %}

    <div class="mb-3">
        {{ form_row(form.subCategories, { 'attr': {'class': 'form-control'} }) }}
    </div>

   <div class="mb-3">
    {{ form_row(form.image, { 'attr': {'class': 'form-control'} }) }}
    <div class="text-danger">
        {{ form_errors(form.image) }}
    </div>
</div>

    <div class="d-grid">
        <button class="btn btn-outline-primary">
            {{ button_label|default('Save') }}
        </button>
    </div>

{{ form_end(form) }}

