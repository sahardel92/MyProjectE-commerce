{% extends 'base.html.twig' %}

{% block title %}Mon Panier - LilyShop{% endblock %}

{% block body %}
<div class="container my-4">
  <h1 class="mb-4">üõçÔ∏è Mon panier</h1>

  <div class="row">
    <!-- ==================== Partie gauche : tableau produits ==================== -->
    <div class="col-md-8">
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th>Produit</th>
              <th>Prix unitaire</th>
              <th>Quantit√©</th>
              <th>Total</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for item in items %}
              <tr>
                <!-- üìå Nom produit -->
                <td>
                  <strong>{{ item.product.name }}</strong><br>
                  <small class="text-muted">
                    {{ item.product.description|slice(0, 40) ~ '...' }}
                  </small>
                </td>

                <!-- üí∞ Prix unitaire -->
                <td>{{ item.product.price|number_format(2, ',', ' ') }} ‚Ç¨</td>

                <!-- üî¢ Contr√¥le quantit√© (+ et -) -->
                <td>
                  <div class="d-flex align-items-center">
                    <!-- bouton ‚ûñ -->
                    <a href="{{ path('app_cart_decrease', {'id': item.product.id}) }}" 
                       class="btn btn-outline-secondary btn-sm me-2">‚ûñ</a>

                    <span class="fw-bold">{{ item.quantity }}</span>

                    <!-- bouton ‚ûï -->
                    <a href="{{ path('app_cart_add', {'id': item.product.id}) }}" 
                       class="btn btn-outline-secondary btn-sm ms-2">‚ûï</a>
                  </div>
                </td>

                <!-- üßæ Total de la ligne -->
                <td>
                  <strong>
                    {{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} ‚Ç¨
                  </strong>
                </td>

                <!-- üóëÔ∏è Supprimer -->
                <td>
                  <a href="{{ path('app_cart_product_remove', {'id': item.product.id}) }}" 
                     class="btn btn-danger btn-sm">
                    üóëÔ∏è Supprimer
                  </a>
                </td>
              </tr>
            {% else %}
              <!-- üï≥Ô∏è Si panier vide -->
              <tr>
                <td colspan="5" class="text-center text-muted">
                  Votre panier est vide üò¢
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

    <!-- ==================== Partie droite : r√©sum√© ==================== -->
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title">üì¶ R√©sum√©</h5>

          <!-- üßÆ Compter les articles -->
          {% set totalArticles = 0 %}
          {% for item in items %}
            {% set totalArticles = totalArticles + item.quantity %}
          {% endfor %}

          <p>Sous-total ({{ totalArticles }} article{{ totalArticles > 1 ? 's' : '' }})</p>
