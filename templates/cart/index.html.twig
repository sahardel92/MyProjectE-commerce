{% extends 'base.html.twig' %}

{% block title %}Mon Panier - LilyShop{% endblock %}

{% block body %}
<div class="container my-5">

    <h1 class="mb-4 fw-bold">üõçÔ∏è Mon panier</h1>

    <div class="row g-4">

        <!-- ==================== PRODUITS ==================== -->
        <div class="col-md-8">

            {% if items is empty %}
                <div class="alert alert-info text-center p-4">
                    Votre panier est vide üò¢<br>
                    <a href="{{ path('app_home') }}" class="btn btn-primary mt-3">üõí Continuer mes achats</a>
                </div>
            {% else %}

                {% for item in items %}
                <div class="card mb-3 shadow-sm border-0 rounded-4 p-3">

                    <div class="row g-3 align-items-center">

                        <!-- IMAGE PRODUIT -->
                        <div class="col-3">
                            <img src="{{ asset('uploads/images/' ~ item.product.image) }}"
                                 alt="{{ item.product.name }}"
                                 class="img-fluid rounded-3"
                                 style="object-fit: cover; height: 100px;">
                        </div>

                        <!-- INFORMATIONS PRODUIT -->
                        <div class="col-5">
                            <h5 class="mb-1 fw-semibold">{{ item.product.name }}</h5>
                            <small class="text-muted d-block">
                                {{ item.product.description|slice(0, 50) ~ '...' }}
                            </small>

                            <!-- PRIX UNITAIRE -->
                            <div class="text-primary fw-bold mt-2">
                                {{ item.product.price|number_format(2, ',', ' ') }} ‚Ç¨
                            </div>
                        </div>

                        <!-- QUANTIT√â & TOTAL -->
                        <div class="col-4 text-end">

                            <!-- BOUTONS QUANTIT√â -->
                            <div class="d-flex justify-content-end mb-2">
                                <a href="{{ path('app_cart_decrease', {'id': item.product.id}) }}"
                                   class="btn btn-outline-secondary btn-sm rounded-circle me-2">‚àí</a>

                                <span class="fw-bold fs-5">{{ item.quantity }}</span>

                                <a href="{{ path('app_cart_add', {'id': item.product.id}) }}"
                                   class="btn btn-outline-secondary btn-sm rounded-circle ms-2">+</a>
                            </div>

                            <!-- TOTAL LIGNE -->
                            <div class="fw-bold fs-5 text-success">
                                {{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} ‚Ç¨
                            </div>

                            <!-- SUPPRIMER -->
                            <a href="{{ path('app_cart_product_remove', {'id': item.product.id}) }}"
                               class="btn btn-link text-danger mt-2 p-0">
                                üóëÔ∏è Supprimer
                            </a>
                        </div>

                    </div>

                </div>
                {% endfor %}

            {% endif %}

        </div>

        <!-- ==================== R√âSUM√â ==================== -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">

                    <h4 class="fw-bold mb-3">üì¶ R√©sum√©</h4>

                    {% set totalArticles = 0 %}
                    {% for item in items %}
                        {% set totalArticles = totalArticles + item.quantity %}
                    {% endfor %}

                    <p class="mb-1 text-muted">
                        Sous-total ({{ totalArticles }} article{{ totalArticles > 1 ? 's' : '' }})
                    </p>
                    <h3 class="fw-bold text-success mb-3">
                        {{ totalProduits|number_format(2, ',', ' ') }} ‚Ç¨
                    </h3>

                    <hr>

                    <a href="{{ path('app_order') }}"
                       class="btn btn-primary w-100 py-2 fw-semibold mb-2">
                       üßæ Passer la commande
                    </a>

                    <a href="{{ path('app_home') }}"
                       class="btn btn-outline-secondary w-100 py-2 mb-2">
                       üõí Continuer mes achats
                    </a>

                    <a href="{{ path('app_cart_remove') }}"
                       class="btn btn-danger w-100 py-2">
                       üóëÔ∏è Vider mon panier
                    </a>

                </div>
            </div>
        </div>

    </div>

</div>
{% endblock %}
