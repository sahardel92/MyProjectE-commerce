{% extends 'base.html.twig' %}

{% block title %}Accueil - LilyShop{% endblock %}

{% block body %}
<div class="container my-5">

    <!-- üè† Section Hero -->
    <div class="p-5 mb-5 text-center bg-light rounded shadow-sm">
        <h1 class="display-5 fw-bold">Bienvenue sur LilyShop üõçÔ∏è</h1>
        <p class="lead text-muted">
            D√©couvrez nos meilleures offres et les derniers produits ajout√©s !
        </p>
        <a href="{{ path('app_home') }}" class="btn btn-success btn-lg mt-3">Voir les produits</a>
    </div>

    <!-- üõí Produits -->
    <h2 class="mb-4">üÜï Nos Produits</h2>
    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">

                    <!-- Image produit -->
                    <a href="{{ path('app_home_product_show', {'id': product.id}) }}">
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" 
                             class="card-img-top p-3 bg-light"
                             alt="{{ product.name }}"
                             style="height: 200px; object-fit: contain;">
                    </a>

                    <div class="card-body d-flex flex-column">
                        <a href="{{ path('app_home_product_show', {'id': product.id}) }}" 
                           class="text-decoration-none text-dark">
                            <h5 class="card-title">{{ product.name }}</h5>
                        </a>
                        <p class="card-text text-muted small">
                            {{ product.description|slice(0, 50) }}...
                        </p>
                        <p class="fw-bold text-success mb-3">{{ product.price }} ‚Ç¨</p>
                        
                        <a href="{{ path('app_cart_add', {'id': product.id}) }}" 
                           class="btn btn-success mt-auto w-100">
                           üõí Ajouter au panier
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center text-muted">Aucun produit disponible pour le moment.</p>
        {% endfor %}
    </div>

    <!-- üìå Pagination Bootstrap -->
    <div class="d-flex justify-content-center mt-5">
        {{ knp_pagination_render(products, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
</div>
{% endblock %}
