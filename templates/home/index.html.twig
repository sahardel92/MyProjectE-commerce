                <img src="{{ asset('uploads/images/solde.jpg') }}" 
                     class="d-block w-100 hero-img" 
                     alt="Black Friday Solde">
            </div>

            <div class="carousel-item">
                <img src="{{ asset('uploads/images/promo2.jpg') }}" 
                     class="d-block w-100 hero-img" 
                     alt="Promotions Black Friday">
            </div>

            <div class="carousel-item">
                <img src="{{ asset('uploads/images/6dec.jpg') }}" 
