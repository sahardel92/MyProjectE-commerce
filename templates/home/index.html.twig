{% extends 'base.html.twig' %}

{% block title %}Accueil - LilyShop{% endblock %}

{% block body %}
<div class="container">
    <br><br><br>
    <h1 class="mb-4 pb-2 border-bottom">Produits</h1>


    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0 d-flex flex-column">
                    
                    {# Image produit #}
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" 
                         class="card-img-top p-3 bg-light"
                         alt="{{ product.name }}"
                         style="height: 200px; object-fit: contain;">

                    <div class="card-body d-flex flex-column">
                        <a style="text-decoration: none;" href="{{ path('app_home_product_show', { id: product.id }) }}">
                            <h5 class="card-title">{{ product.name }}</h5>
                        </a>
                        
                        {# La description occupe lâ€™espace restant #}
                        <p class="card-text text-muted small flex-grow-1">
                            {{ product.description|slice(0, 50) }}...
                        </p>

                        {# Prix + bouton toujours en bas #}
                        <div class="mt-auto">
                            <p class="fw-bold text-success mb-2">{{ product.price }} â‚¬</p>
                            <a href="{{ path('app_cart_add', { 'id': product.id }) }}" class="btn btn-success w-100">
                            ðŸ›’ Ajouter au panier
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <br><br>
    

    {{ knp_pagination_render(products,'layouts/pagination.html.twig') }}
</div>
{% endblock %}

