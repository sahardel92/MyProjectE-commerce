{% extends 'base.html.twig' %}

{% block title %}Accueil - LilyShop{% endblock %}

{% block body %}
<div class="container">

    <div class="card mb-12" style="margin-top: 100px;">
    <div class="row g-0">
        <div class="col-md-4">
        <img src="{{ asset('uploads/images/' ~ product.image) }}"  class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title text-primary">{{ product.name }}</h5>
            <p class="card-text">{{ product.description }}</p>
            <h3 class="text-success">{{ product.price }} €</h3>
            <a href="" class="text-success"> Ajouter au panier</a>
           
        </div>
        </div>
    </div>
    </div>

    <h2>Derniers produits ajoutés</h2>

     <div class="row g-4">
        {% for product in products %}
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    
                    {# Image produit #}
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" 
                         class="card-img-top p-3 bg-light"
                         alt="{{ product.name }}"
                         style="height: 200px; object-fit: contain;">

                    <div class="card-body d-flex flex-column">
                        <a style="text-decoration: none; " href="{{ path('app_home_product_show', { id: product.id }) }}">
                        <h5 class="card-title">{{ product.name }}</h5></a>
                        <p class="card-text text-muted small">
                            {{ product.description|slice(0, 50) }}...
                        </p>
                        <p class="fw-bold text-success mb-3">{{ product.price }} €</p>
                        <a href="{{ path('app_cart_new', { id: product.id }) }}" class="btn btn-success mt-auto w-100">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
