{% extends 'base.html.twig' %}

{% block title %}Accueilp{% endblock %}

{% block body %}
<div class="container">
    <br><br><br>
    <h1 class="mb-4">{{ subCategory.name }}</h1>

    <div class="row g-4">
        {% for product in products %}
            <div class="col-md-3">
                <div class="card h-100 shadow-sm border-0">
                    
                    {# Image produit #}
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" 
                         class="card-img-top p-3 bg-light"
                         alt="{{ product.name }}"
                         style="height: 200px; object-fit: contain;">

                    <div class="card-body d-flex flex-column">
                        <a style="text-decoration: none; " href="{{ path('app_home_product_show', { id: product.id }) }}">
                        <h5 class="card-title">{{ product.name }}</h5></a>
                        <p class="card-text text-muted small">
                            {{ product.description|slice(0, 50) }}...
                        </p>
                        <p class="fw-bold text-success mb-3">{{ product.price }} â‚¬</p>
                        <a href="#" class="btn btn-success mt-auto w-100">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}